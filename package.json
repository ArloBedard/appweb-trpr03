{
  "name": "trpr03",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "backend": "copy-files-from-to --config ./backend/copy-db-dev.json && json-server-auth --watch ./backend/db-dev.json .js --delay 500 --routes ./backend/routes.json --host 127.0.0.1",
    "backend:cypress": "json-server-auth --watch ./backend/cypress/db-cypress.json .js  --routes ./backend/routes.json --host 127.0.0.1",
    "backend:cypress:seed": "copy-files-from-to --config ./backend/cypress/copy-db-cypress.json"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "axios": "^1.9.0",
    "bootstrap": "^5.3.5",
    "jwt-decode": "^4.0.0",
    "pinia": "^3.0.2",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.11.0",
    "@tsconfig/node20": "^20.1.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.3",
    "@vee-validate/rules": "^4.15.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "copy-files-from-to": "^3.12.1",
    "cypress": "^14.3.2",
    "eslint": "^9.25.1",
    "eslint-plugin-cypress": "^4.3.0",
    "jsdom": "^26.1.0",
    "json-server": "^0.17.4",
    "json-server-auth": "^2.1.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "start-server-and-test": "^2.0.11",
    "typescript": "~5.8.3",
    "vite": "^6.3.3",
    "vite-plugin-vue-devtools": "^7.7.6",
    "vitest": "^3.1.2",
    "vue-tsc": "^2.2.10"
  },
  "overrides": {
    "jsonwebtoken": "^9.0.2"
  }
}
